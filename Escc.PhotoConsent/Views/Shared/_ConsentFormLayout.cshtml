<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Escc.PhotoConsent</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <p class="navbar-brand">
                    <a href="https://www.eastsussex.gov.uk/">
                        <img src="~/Content/Images/logo-large.png" width="40" height="30" alt="East Sussex County Council" />
                    </a> 
                    <a href="https://www.eastsussex.gov.uk/">
                        East Sussex County Council
                    </a> 
                </p>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p><a href="https://www.eastsussex.gov.uk/"> <img src="~/Content/Images/logo-small.gif" alt="ESCC"></a> &copy; @DateTime.Now.Year - East Sussex County Council</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
