@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Escc.PhotoConsent.Models.ViewModels.ManageFormViewModel

<p></p>
<div class="row">
    <div class="col-sm-9 col-md-9 col-lg-9">
        <div class="panel panel-info">
            <div class="panel-heading"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Advanced Search </div>
            <div class="panel-body">
                @using (Html.BeginForm("SearchForms", "Admin", FormMethod.Post))
                {
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">
                                @Html.Label("ProjectReference", new { @class = "control-label" })
                                @Html.TextBox("ProjectReference", "", new { @placeholder = "e.g. ExampleProject254", @class = "form-control" })
                            </div>
                            <div class="col-sm-3 col-md-3 col-lg-3">
                                @Html.Label("CreatedBy", new { @class = "control-label" })
                                @Html.TextBox("CreatedBy", "", new { @placeholder = "e.g. Jane Doe", @class = "form-control" })
                            </div>
                            <div class="col-sm-3 col-md-3 col-lg-3">
                                @Html.Label("DateCreated", new { @class = "control-label" })
                                @Html.TextBox("DateCreated", "", new { @placeholder = "e.g. 23/08/2017", @class = "form-control" })
                            </div>
                            <div class="col-sm-3 col-md-3 col-lg-3">
                                @Html.Label("Consent", new { @class = "control-label" })
                                @Html.DropDownList("Consent", new SelectList(new List<string> { "True", "False", "Both" }), "Please Select", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-1 col-md-1 col-lg-1">
                                <p></p>
                                @Html.RouteLink("Clear", "ManageForms", new { }, new { @class = "btn btn-default" })
                            </div>
                            <div class="col-sm-1 col-md-1 col-lg-1">
                                    <p></p>
                                    <input type="submit" class="btn btn-primary" value="Search" />
                            </div>    
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Create New Form</h3>
            </div>
            <div class="panel-body">
                @{Html.RenderPartial("~/Views/Partials/_NewConsentFormForm.cshtml");}
            </div>
        </div>
    </div>
</div>

<p></p>
<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title"><span class="glyphicon glyphicon-file" aria-hidden="true"></span> Manage Forms</h3>
        </div>
        <div class="panel-body">
            @{Html.RenderPartial("~/Views/Partials/_DataTable.cshtml", Model.Forms);}
        </div>
    </div>
</div>

